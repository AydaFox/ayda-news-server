{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles sorted by date, most recent first",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles?topic=": {
    "description": "serves an array of articles filtered by topic",
    "validQueries": "if the topic exists in the database, otherwise it will respond with a 404 error",
    "exampleQuery": "/api/articles?topic=cooking",
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles?sort_by=": {
    "description": "serves an array of articles ordered by a valid article column in descending order",
    "validQueries": ["article_id", "title", "topic", "author", "created_at", "votes"],
    "exampleQuery": "/api/articles?sort_by=article_id",
    "exampleResponse": {
      "articles": [
        {
          "article_id": 2,
          "title": "First time building a PC",
          "topic": "technology",
          "author": "weegembump",
          "body": "Text from the article..",
