  "PATCH /api/articles/:article_id": {
    "description": "updates an article's votes with the requested ID and vote increment",
    "queries": [],
    "exampleRequestBody": { "inc_votes": 1 },
    "exampleResponse": {
      "article": {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
